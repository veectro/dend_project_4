resource "aws_emr_cluster" "cluster" {
  name          = "udacity-dend-4-cluster"
  release_label = "emr-5.34.0"
  applications  = ["Hadoop", "Spark", "JupyterHub"]
  depends_on = [aws_security_group.emr_master, aws_security_group.emr_slave]
  master_instance_group {
    instance_type = "m5.xlarge"
  }

  core_instance_group {
    instance_count = 1
    instance_type  = "m5.xlarge"
  }

  ec2_attributes {
    key_name = aws_key_pair.udacity_dend_4_key.key_name
    instance_profile = aws_iam_instance_profile.emr_profile.arn
    additional_master_security_groups = join(",",[aws_security_group.emr_master.id])
    additional_slave_security_groups = join(",",[aws_security_group.emr_slave.id])
  }

  service_role = aws_iam_role.iam_emr_service_role.arn

}

resource "aws_iam_instance_profile" "emr_profile" {
  name = "emr_profile"
  role = aws_iam_role.iam_emr_profile_role.name
}

# IAM Role for EC2 Instance Profile
resource "aws_iam_role" "iam_emr_profile_role" {
  name = "iam_emr_profile_role"

  assume_role_policy = <<EOF
{
  "Version": "2008-10-17",
  "Statement": [
    {
      "Sid": "",
      "Effect": "Allow",
      "Principal": {
        "Service": "ec2.amazonaws.com"
      },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
}

# IAM role for EMR Service
resource "aws_iam_role" "iam_emr_service_role" {
  name = "iam_emr_service_role"

  assume_role_policy = <<EOF
{
  "Version": "2008-10-17",
  "Statement": [
    {
      "Sid": "",
      "Effect": "Allow",
      "Principal": {
        "Service": "elasticmapreduce.amazonaws.com"
      },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
}

